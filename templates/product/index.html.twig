{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Product index</h1>
    {{ include('layouts/_flash_message.html.twig') }}

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Stock</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <th scope="row">{{ product.id }}</th>
                <td>{{ product.name }}</td>
                <td>{{ product.description | slice(0, 60) }}</td>
                <td>{{ product.price }}</td>
                <td>
                {% autoescape %}
                    {% if product.stock > 0 %}
                        {{ product.stock }}
                    {% else %}
                        <span class="text-danger">Stock épuisé</span>
                    {% endif %}
                {% endautoescape %}
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary btn-sm">show</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning btn-sm">edit</a>
                    <a href="{{ path('app_product_stock_add', {'id': product.id}) }}" class="btn btn-info btn-sm">Ajouté le stock</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_new') }}" class="btn btn-success btn-sm">Create new</a>
</div>
{% endblock %}
