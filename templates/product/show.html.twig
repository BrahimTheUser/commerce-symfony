{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="container mt-5 product-details">
    <h1>Product</h1>
                    <img src="{{ '/uploads/images/' ~ product.image }}" class="card-img-top w-25 " alt="{{ product.name }}">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}" class="btn btn-primary mt-4">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning mt-4">edit</a>

    <a href="{{ path('app_product_stock_add_history', {'id': product.id}) }}" class="btn btn-warning mt-4">afficher l'historique d'ajout du stock</a>

    {{ include('product/_delete_form.html.twig') }}
</div>
    {{ include('layouts/_footer.html.twig') }}
{% endblock %}
