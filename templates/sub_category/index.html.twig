{% extends 'base.html.twig' %}

{% block title %}SubCategory index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>SubCategory index</h1>
    {{ include('layouts/_flash_message.html.twig') }}

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">cat√©gorie</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <th scope="row">{{ sub_category.id }}</th>
                <td>{{ sub_category.name }}</td>
                <td>{{ sub_category.category }}</td>
                <td>
                    <a href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}" class="btn btn-primary btn-sm">show</a>
                    <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" class="btn btn-warning btn-sm">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sub_category_new') }}" class="btn btn-outline-primary btn-sm">Create Sub Category</a>
</div>
{% endblock %}
